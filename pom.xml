<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
  http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>gr.abiss.js</groupId>
  <artifactId>sarissa</artifactId>
  <name>Sarissa</name>
  <version>0.9.9.7-SNAPSHOT</version>
  <packaging>jar</packaging>
  <description> Sarissa is an ECMAScript library acting as a cross-browser wrapper for native XML
    APIs. It offers various XML related goodies like Document instantiation, XML loading from URLs
    or strings, XSLT transformations, XPath queries etc and comes especially handy for people doing
    what is lately known as "AJAX" development. Supported browsers are Mozilla - Firefox and family,
    Internet Explorer with MSXML3.0 and up, Konqueror (KDE 3.3+ for sure), Safari, Chrome and Opera 9. </description>
  <properties>
    <!-- General project settings -->
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <!-- Project build information -->
    <!-- Workaround for Maven bug https://issues.apache.org/jira/browse/MRESOURCES-99 -->
    <sarissa.build.timestamp>${maven.build.timestamp}</sarissa.build.timestamp>
    <!-- Plugin versions -->
    <maven-js-plugin.version>1.3.1</maven-js-plugin.version>
    <maven-jstools-plugin.version>0.7</maven-jstools-plugin.version> <!-- FIXME: it was initially 0.9-SNAPSHOT ??? -->
    <maven-resources-plugin.version>2.7</maven-resources-plugin.version>
    <maven-site-plugin.version>3.5</maven-site-plugin.version>
  </properties>
  <url>http://dev.abiss.gr/sarissa/</url>
  <inceptionYear>2003</inceptionYear>
  <organization>
    <name>Abiss.gr</name>
    <url>http://www.abiss.gr</url>
  </organization>
  <mailingLists>
    <mailingList>
      <name>${project.name} User Mailing list</name>
      <subscribe>http://lists.sourceforge.net/lists/listinfo/${project.artifactId}-users</subscribe>
      <unsubscribe>http://lists.sourceforge.net/lists/listinfo/${project.artifactId}-users</unsubscribe>
      <archive>http://sourceforge.net/mailarchive/forum.php?forum_name=${project.artifactId}-users</archive>
    </mailingList>
  </mailingLists>
  <issueManagement>
    <system>Sourceforge Tracker</system>
    <url>http://sourceforge.net/tracker/?group_id=75155</url>
  </issueManagement>
  <developers>
    <developer>
      <id>manos</id>
      <name>Manos Batsis</name>
      <email>manos (AT) abiss.gr</email>
      <organization>Abiss.gr</organization>
        <url>http://blog.abiss.gr/manos/</url>
      <roles>
        <role>Beach Bum</role>
      </roles>
      <timezone>+2</timezone>
    </developer>
    <developer>
      <id>thepm</id>
      <name>Aissam Bazzaoui</name>
      <roles>
        <role>Developer</role>
      </roles>
    </developer>
    <developer>
      <id>volkertb</id>
      <name>Volkert de Buisonj√©</name>
      <email>volkertb@users.noreply.github.com</email>
      <roles>
        <role>Contributor</role>
      </roles>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
    </license>
    <license>
      <name>The GNU General Public License, Version 2</name>
      <url>http://www.gnu.org/licenses/gpl.txt</url>
    </license>
  </licenses>
  <scm>
    <connection>scm:cvs:pserver:anonymous:@${project.artifactId}.cvs.sf.net:/cvsroot/${project.artifactId}:${project.artifactId}</connection>
    <developerConnection>scm:cvs:ext:${maven.username}@${project.artifactId}.cvs.sf.net:/cvsroot/${project.artifactId}:${project.artifactId}</developerConnection>
    <url>http://${project.artifactId}.cvs.sf.net/${project.artifactId}</url>
  </scm>
  <build>
  <extensions>
    <extension>
      <groupId>org.apache.maven.wagon</groupId>
      <artifactId>wagon-ssh-external</artifactId>
      <version>1.0-alpha-5</version>
    </extension>
  </extensions>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <version>${maven-resources-plugin.version}</version>
        <configuration>
          <!-- Prevent the '@' symbol from being treated as a placeholder
               delimiter, since JSDoc tags are prefixed with them and as such
               would otherwise interfere with Maven resource filtering.
               This workaround was found at https://stackoverflow.com/q/2315009
          -->
          <useDefaultDelimiters>false</useDefaultDelimiters>
          <delimiters>
            <!-- Enable only the actually used delimiter. -->
            <delimiter>${*}</delimiter>
          </delimiters>
          <resources>
            <resource>
              <directory>src/main/js</directory>
              <filtering>true</filtering>
            </resource>
            <resource>
              <directory>src/main/resources/js</directory>
              <filtering>true</filtering>
            </resource>
          </resources>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-site-plugin</artifactId>
        <version>${maven-site-plugin.version}</version>
      </plugin>
      <plugin>
        <!--  -->
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>antrun-copy-js-to-site</id>
            <phase>pre-site</phase>
            <configuration>
              <tasks>
                <property name="project.version" value="${project.version}" />
                <mkdir dir="${project.build.directory}/site-webapp/" />
                <copy todir="${project.build.directory}/site-webapp/">
                  <fileset dir="${project.build.directory}/classes"/>
                </copy>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
          <execution>
            <id>antrun-create-full-dist</id>
            <phase>site</phase>
            <configuration>
              <tasks>
                <echo message="Running antrun-create-full-dist" />
                <zip destfile="${project.build.directory}/${project.artifactId}-full-${project.version}.zip">
                  <zipfileset dir="${project.build.directory}/site-webapp" prefix="${project.artifactId}-full-${project.version}"
                    excludes="apidocs/**/*"
                  />
                </zip>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
        </plugin>
      <plugin>
        <groupId>com.mobilvox.ossi.mojo</groupId>
        <artifactId>maven-js-plugin</artifactId>
        <version>${maven-js-plugin.version}</version>
        <configuration>
          <replaceSiteJavaScript>false</replaceSiteJavaScript>
          <siteClassifier>-compressed</siteClassifier>
          <excludes>
            <exclude>**/*-compressed.js</exclude>
          </excludes>
          <jsDirectory>target/classes</jsDirectory>
          <outputDirectory>${basedir}/target/classes</outputDirectory>
          <replaceJavaScript>false</replaceJavaScript>
          <licenseFiles>
            <licenseFile>${basedir}/src/main/resources/js/compressed-js-header.txt</licenseFile>
          </licenseFiles>
        </configuration>      
        <executions>
          <execution>
            <phase>process-resources</phase>
            <goals>
              <goal>compress-custom</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins> 
  </build>
  <reporting>
    <plugins>
      <plugin>
        <groupId>gr.abiss.mvn.plugins</groupId>
        <artifactId>maven-jstools-plugin</artifactId>
        <version>${maven-jstools-plugin.version}</version>
        <inherited>false</inherited>
        <configuration>
          <jsDir>${project.build.directory}/classes</jsDir>
          <reportJslintErrorsOnly>true</reportJslintErrorsOnly>
          <excludes>**/*-compressed.js</excludes>
        </configuration>
        <reportSets>
          <reportSet>
            <reports>
              <report>jslint</report>
              <report>jsdoc</report>
            </reports>
          </reportSet>
        </reportSets>
      </plugin>
    </plugins>
  </reporting>
    <distributionManagement>
        <site>
            <id>dev.abiss.gr</id>
            <url>scp://dev.abiss.gr/home2/m/mbatsis/dev_abiss_gr/sarissa</url>
        </site>
    </distributionManagement>
  <repositories>
    <repository>
      <id>Codehaus Snapshots</id>
      <url>http://snapshots.repository.codehaus.org/</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <releases>
        <enabled>false</enabled>
      </releases>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>Codehaus Snapshots</id>
      <url>http://snapshots.repository.codehaus.org/</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <releases>
        <enabled>false</enabled>
      </releases>
    </pluginRepository>
    <pluginRepository>
      <id>Mobilvox JS Plugin Snapshots</id>
      <url>http://maven-js-plugin.sourceforge.net/m2snapshotrepo/</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <releases>
        <enabled>false</enabled>
      </releases>
    </pluginRepository>
  </pluginRepositories>
</project>
